datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Porra {
  id        Int       @id @default(autoincrement())
  name      String
  isActive  Boolean   @default(true)
  entries   Entry[]
  allowed   AllowedParticipant[]
}

model AllowedParticipant {
  id      Int    @id @default(autoincrement())
  name    String
  porra   Porra  @relation(fields: [porraId], references: [id])
  porraId Int
}

model Entry {
  id              Int          @id @default(autoincrement())
  participantName String
  porra           Porra        @relation(fields: [porraId], references: [id])
  porraId         Int
  predictions     Prediction[]
  pichichi        String?
  createdAt       DateTime     @default(now())
}

model Prediction {
  id        Int    @id @default(autoincrement())
  entry     Entry  @relation(fields: [entryId], references: [id])
  entryId   Int
  match     Match  @relation(fields: [matchId], references: [id])
  matchId   Int
  homeGoals Int
  awayGoals Int
}

model Match {
  id        Int      @id @default(autoincrement())
  phase     String   // "Group", "Round of 16", "Quarterfinals", etc.
  group     String?  // "A", "B", ...
  homeTeam  String
  awayTeam  String
  homeGoals Int?     // Real result that I will be updating manually
  awayGoals Int?
  predictions Prediction[]
}